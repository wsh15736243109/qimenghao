<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.activity.toothbrush_activitys.AlarmActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tit_gradient_bg">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="@string/alarm_set"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="@string/alarm_info"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="11dp"
        android:background="@color/grey_200"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey_200" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/set_time"
            android:textColor="@color/main_blue"
            android:textSize="12dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/set_voice"
            android:textColor="@color/main_blue"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/set_off_on"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:textSize="12dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/grey_200"
        >
        <TextView
            android:id="@+id/alarmTv1"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="7:10"/>
        <TextView
            android:id="@+id/alarmInfoTv1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/alarm_info1"
            android:textSize="12dp"/>

        <Switch
            android:id="@+id/alarmSwitch1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:checked="false"
            android:paddingRight="10dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey_200" />
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/grey_200">
        <TextView
            android:id="@+id/alarmTv2"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="7:10"/>
        <TextView
            android:id="@+id/alarmInfoTv2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/alarm_info1"
            android:textSize="12dp"/>

        <Switch
            android:id="@+id/alarmSwitch2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:checked="false"
            android:paddingRight="10dp"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey_200"
        />
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/grey_200">
        <TextView
            android:id="@+id/alarmTv3"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="7:10"/>
        <TextView
            android:id="@+id/alarmInfoTv3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/alarm_info1"
            android:textSize="12dp"/>

        <Switch
            android:id="@+id/alarmSwitch3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:checked="false"
            android:paddingRight="10dp"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey_200"
        />
    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/grey_200">
        <TextView
            android:id="@+id/alarmTv4"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="7:10"/>
        <TextView
            android:id="@+id/alarmInfoTv4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/alarm_info1"
            android:textSize="12dp"/>

        <Switch
            android:id="@+id/alarmSwitch4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:checked="false"
            android:paddingRight="10dp"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey_200"
        />
    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/grey_200">
        <TextView
            android:id="@+id/alarmTv5"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="7:10"/>
        <TextView
            android:id="@+id/alarmInfoTv5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/alarm_info1"
            android:textSize="12dp"/>

        <Switch
            android:id="@+id/alarmSwitch5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:checked="false"
            android:paddingRight="10dp"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grey_200"
        />
    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/grey_200">
        <TextView
            android:id="@+id/alarmTv6"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="7:10"/>
        <TextView
            android:id="@+id/alarmInfoTv6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/alarm_info1"
            android:textSize="12dp"/>
        <Switch
            android:id="@+id/alarmSwitch6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:checked="false"
            android:paddingRight="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ok_bg"
        android:layout_gravity="center_horizontal"
        android:text="@string/commit_device"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"/>




</LinearLayout>