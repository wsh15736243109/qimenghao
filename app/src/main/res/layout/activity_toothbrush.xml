<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.activity.rope_activitys.RopeActivity"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/frame_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/grey_200"
        >
        <RadioButton
            android:id="@+id/rbToothbrush"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_toothbrush_icon"
            android:gravity="center"
            android:text="@string/toothbrush"
            android:textColor="@color/radiobutton_textcolor"
            android:textSize="12dp"
            android:paddingTop="5dp"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/rbMyself"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_toothbrush_my_icon"
            android:gravity="center"
            android:text="@string/myself"
            android:textColor="@color/radiobutton_textcolor"
            android:textSize="12dp"
            android:paddingTop="5dp"
            />
    </RadioGroup>



</LinearLayout>